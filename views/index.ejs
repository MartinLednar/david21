    <div class="nav-msg-box">
      <p class="nav-msg"><%=navMessage%></p>
      <span class="close-nav-msg">
        <svg class="feather nav-msg-icon">
          <use xlink:href="/img/feather-sprite.svg#x" />
        </svg>
