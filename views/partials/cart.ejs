<div class="cart-content">
  <div class="box-x cart-minus">
    <div class="minus"></div>
  </div>
  <div class="cart-heading-box">
    <h2 class="cart-title">Your Items</h2>
  </div>
  <div class="cart-items-box">
    <%cartItems.forEach(item => {%>
    <div class="item">
      <button class="item-x">
        <svg class="feather x-icon">
          <use xlink:href="/img/feather-sprite.svg#x" />
        </svg>
      </button>

      <div class="item-content">
        <div class="item-text">
          <h3 class="item-heading"><%=item.name%></h3>
          <h4 class="item-author"><%=item.author%></h4>
          <h5 class="item-coauthors"><%=item.coAuthors.join(' ,')%></h5>
        </div>
        <div class="item-price-box">
          <p class="item-price"><%=item.price%> â‚¬</p>
        </div>
      </div>
    </div>

    <%})%>
  </div>
  <div class="cart-btn-box">
    <a href="#" class="cart-side-btn btn-green">Go to payment</a>
  </div>
</div>
